/* Basic Expressions Video Example Start
var a = 2; //sets up our variable a and defines it with 2
var b;
b = a + 3; //add 3 to a
console.log(a);
Basic Expressions Video Example End*/

/* Example Expressions Video Start
var yearBorn = 1992;
var age = 2013 - yearBorn - 1;
console.log(age);
Example Expressions Video End*/



/* Arithmetic Operators Video Example Start
//area of a triangle is half of the width times the height
var width = 7;
var height = 8;
var area = width * height/2;
console.log(area);
Arithmetic Operators Video Example End*/


/* Using Module Video Example Start
var remainder = 9 % 2;
console.log(remainder);
Using Modulo Video Example End*/



/* Order of Operations Video Example Start

var quiz1 = 87;
var quiz2 = 100;
var quiz3 = 60;
var quiz4 = 80;

//the average is the sum of the items divided by the number of items
var average = (quiz1 + quiz2 + quiz3 + quiz4)/4;
//console.log(average);

var length = 7;
var width = 6;
var perimeter = length * 2 + width * 2;
console.log(perimeter);

Order of Operations Video Example End*/


/* Using Arrays in Expressions Video Example Start
var orangeBins = [234, 567, 883]

var total = orangeBins[0] + orangeBins[1] + orangeBins[2];
console.log(total);
Using Arrays in Expressions Video Example End*/


/*Concatenating Strings Video Example Start

//Concatenating - Means Combining Strings

var a = 6;
var b = 7;

var result = a + b;
console.log(result);

Concatenating Strings Video Example End*/

/* Casting Video Example Start
 
//Casting - Treating Strings like Numbers and vice versa

var areaCode = 407;
var firstPart = 203;
var secondPart = 4529;
//(407 203-4529)
var phoneNo = "(" + String(areaCode) + ")" + String(firstPart) + "-" + String(secondPart);
console.log(phoneNo);

Casting Video Example End*/


var a = 3;
a ++; //same as a = a + 1 // or a += 1
a --; //same as a = a - 1 // a -= 1
console.log(a);













